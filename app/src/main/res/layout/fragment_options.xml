<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/rb_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="continue track after the app closing"
                android:theme="@style/MyRadioButton"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_not_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:checked="false"
                android:text="doesn&apos;t track after the app closing   "
                android:theme="@style/MyRadioButton"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_ask_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:checked="false"
                android:text="ask before the  application closing  "
                android:theme="@style/MyRadioButton"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/check_box_turning_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="turning mode"
                android:theme="@style/MyCheckBox"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/check_box_add_info_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="show additional info"
                android:theme="@style/MyCheckBox"
                android:textSize="15sp" />
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>